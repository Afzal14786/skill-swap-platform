{
  "compilerOptions": {
    "baseUrl": ".", // This sets the base directory for resolving modules
    "paths": {
      "@/*": ["./src/*"] // This maps "@/" to the "src" directory
    },
    // These are common options for React JS projects with Vite:
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"] // Tells VS Code/other tools where to look for JS files
}